@model IEnumerable<Capluga.Entities.RoleEnt>
@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Informacion de Roles</h2>

            @if (Model.Count() > 0)
            {
                <table id="tableShow" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.RoleID</td>
                                <td>@item.RolName</td>


                                <td style="text-align:center">
                                    <a href="@Url.Action("ActualizarRol","Rol", new { q = item.RoleID })"><i class="fa fa-user fa-lg"></i></a>
                                </td>

                                <td style="text-align:center">
                                    <a href="@Url.Action("EliminarRol","Rol", new { q = item.RoleID })"><i class="fa fa-xing fa-lg"></i></a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="col-12 alert alert-info" role="alert" style="text-align: center; margin-top: 5%;">
                    No hay usuarios registrados en este momento
                </div>
            }

        </div>
    </div>
</div>