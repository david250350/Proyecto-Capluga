@model IEnumerable<Capluga.Entities.UsuarioEnt>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Informaci�n de Usuarios</h2>

            @if (Model.Count() > 0)
            {
                <table id="tableShow" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Correo Electr�nico</th>
                            <th>Nombre</th>
                            <th>Apellidos</th>
                            <th>Estado</th>
                            <th>Cambiar Estado</th>
                            <th>Actualizar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.UserID</td>
                                <td>@item.Email</td>
                                <td class="card-title">@item.UserName</td>
                                <td>@item.Surnames</td>

                                @if (item.State)
                                {
                                    <td>Activo</td>
                                }
                                else
                                {
                                    <td>Inactivo</td>
                                }

                                <td style="text-align:center">
                                    <a href="@Url.Action("ActualizarEstadoUsuario","Usuario", new { q = item.UserID })"><i class="fa fa-refresh fa-lg"></i></a>
                                </td>

                                <td style="text-align:center">
                                    <a href="@Url.Action("ActualizarUsuario","Usuario", new { q = item.UserID })"><i class="fa fa-user fa-lg"></i></a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="col-12 alert alert-info" role="alert" style="text-align: center; margin-top: 5%;">
                    No hay usuarios registrados en este momento
                </div>
            }

        </div>
    </div>
</div>